---
interface Props {
	title: string;
}

import { SEO } from 'astro-seo';
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title="Location cabinet Sceaux"
			description="Cabinet pluridisciplinaire à Sceaux offrant des bureaux équipés pour les professionnels. Emplacement central, idéal pour psychologues, thérapeutes et experts en bien-être. Réservez dès aujourd'hui."
			canonical="https://location-cabinet-sceaux.fr/"
			openGraph={{
				basic: {
					title: "Location cabinet Sceaux",
					type: "website",
					image: "src/assets/images/photo-2-1200w.jpg",
				}
			}}
			extend={{
				// extending the default link tags
        		link: [{ rel: "icon", href: "/favicon.ico" }],
				// extending the default meta tags
        		meta: [
				],
			}}
		/>
	</head>
	<body>
	<header class="sticky top-0 mx-auto border-b border-secondary bg-white py-5">
		<nav class="px-5 md:px-0 container mx-auto flex flex-wrap items-center gap-5 text-lg md:text-2xl">
			<a
				href="#avantages"
				class="transition-colors hover:text-lime-600"
			>
				Le cabinet
			</a>
			<a
				href="#tarifs"
				class="transition-colors hover:text-lime-600"
			>
				Tarifs
			</a>
			<a
				href="#contact"
				class="ml-auto rounded bg-lime-600 p-3 text-white"
			>
				Contact
			</a>
		</nav>
	</header>
		<slot />
	`	<footer class="bg-lime-900 text-white py-5">
			<div class="container px-5 md:px-0 mx-auto flex  gap-5 text-lg md:text-2xl">
				<p class="w-full">
					© 2024 Location cabinet Sceaux
				</p>
			</div>
		</footer>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
	}
</style>
